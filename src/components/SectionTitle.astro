---
interface Props {
  accent?: string;
  title: string;
}

const { accent = '', title } = Astro.props;
---

<div class="text-center mb-12 sm:mb-16">
  {accent && (
    <p class="text-teal-600 font-medium text-lg sm:text-xl mb-2 tracking-wide" style="font-family: 'Georgia', serif;">
      {accent}
    </p>
  )}
  <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-900 tracking-tight">
    {title}
  </h2>
</div>
