---
interface Props {
  image: string;
  imageAlt: string;
  title: string;
  description: string;
  duration: string;
  price: string;
  badge?: string;
}

const { image, imageAlt, title, description, duration, price, badge } = Astro.props;
---

<article class="group bg-white rounded-2xl shadow-md overflow-hidden transition-all duration-300 hover:shadow-xl hover:-translate-y-2 flex flex-col">
  <!-- Image container with zoom effect -->
  <div class="relative h-56 w-full overflow-hidden rounded-t-2xl">
    <img
      src={image}
      alt={imageAlt}
      class="h-56 w-full object-cover rounded-t-2xl transition-transform duration-500 group-hover:scale-110"
      loading="lazy"
    />
    {badge && (
      <span class="absolute top-3 right-3 px-3 py-1 text-xs font-semibold text-white bg-teal-600 rounded-full shadow-md">
        {badge}
      </span>
    )}
  </div>

  <!-- Content area -->
  <div class="p-6 flex flex-col flex-grow">
    <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mb-2">
      {title}
    </h3>
    <p class="text-gray-600 text-sm sm:text-base leading-relaxed mb-4 flex-grow">
      {description}
    </p>

    <!-- Duration & Price row -->
    <div class="flex items-center justify-between gap-4 mb-5 text-sm">
      <span class="flex items-center gap-1.5 text-gray-600">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-teal-600 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        {duration}
      </span>
      <span class="font-bold text-teal-600 text-lg">{price}</span>
    </div>

    <!-- Book Now button -->
    <a
      href="#contact"
      class="block w-full py-3.5 px-6 text-center font-semibold text-white bg-teal-600 hover:bg-teal-700 rounded-xl transition-colors duration-300 min-h-[48px] flex items-center justify-center touch-manipulation"
    >
      Book Now
    </a>
  </div>
</article>
