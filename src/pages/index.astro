---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import WaveDivider from '../components/WaveDivider.astro';
import SectionTitle from '../components/SectionTitle.astro';
import ActivityCard from '../components/ActivityCard.astro';
import TourPackageCard from '../components/TourPackageCard.astro';
import SectionDivide from '../components/sectionDivide.astro';

const activities = [
  {
    title: 'Zip Lines',
    description: 'Add some adventure to your travel plans',
    imageSrc: 'https://images.unsplash.com/photo-1551632811-561732d1e306?w=400&h=400&fit=crop',
    imageAlt: 'Person on a zipline in the forest',
  },
  {
    title: 'Kayaking',
    description: 'Kayaking makes travel to the next level',
    imageSrc: 'https://images.unsplash.com/photo-1544551763-46a013bb70d5?w=400&h=400&fit=crop',
    imageAlt: 'People kayaking on calm waters',
  },
  {
    title: 'Bungee Jump',
    description: 'Bungee jumps are one of the most thrilling adventures',
    imageSrc: 'https://images.unsplash.com/photo-1551698618-1dfe5d97d256?w=400&h=400&fit=crop',
    imageAlt: 'Person bungee jumping',
  },
  {
    title: 'Canoeing',
    description: 'Just sit in the canoe and float with complete safety',
    imageSrc: 'https://images.unsplash.com/photo-1504280390067-1bad23fc5a10?w=400&h=400&fit=crop',
    imageAlt: 'Person canoeing on a lake',
  },
];

const tourPackages = [
  {
    title: 'Patagonia Adventure',
    description: 'Explore glaciers, lakes and breathtaking southern landscapes.',
    image: 'https://images.unsplash.com/photo-1464822759023-fed622ff2c3b?w=800&h=500&fit=crop',
    imageAlt: 'Patagonia mountains and glaciers',
    duration: '5 Days',
    price: '$1,250',
    badge: 'Popular',
  },
  {
    title: 'Amazon Rainforest',
    description: 'Discover wildlife and nature deep inside the Amazon jungle.',
    image: 'https://images.unsplash.com/photo-1516026672322-bc52d61a55d5?w=800&h=500&fit=crop',
    imageAlt: 'Amazon rainforest and river',
    duration: '7 Days',
    price: '$1,890',
    badge: 'Best Seller',
  },
  {
    title: 'Caribbean Escape',
    description: 'Relax on white sand beaches with crystal clear water.',
    image: 'https://images.unsplash.com/photo-1507525428034-b723cf961d3e?w=800&h=500&fit=crop',
    imageAlt: 'Caribbean tropical beach',
    duration: '4 Days',
    price: '$980',
    badge: 'Popular',
  },
];
---

<Layout>
  <Hero />
 

  <section id="adventures" class="bg-white py-20 sm:py-24 lg:py-28">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SectionTitle accent="Take yourself" title="Adventure Ideas" />

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-10">
        {activities.map((activity) => (
          <ActivityCard
            title={activity.title}
            description={activity.description}
            imageSrc={activity.imageSrc}
            imageAlt={activity.imageAlt}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Tour Packages -->
  <section id="tours" class="bg-gray-50 py-20 sm:py-24 lg:py-28 relative">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SectionTitle accent="Choose your trip" title="Popular Tour Packages" />

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-10">
        {tourPackages.map((pkg) => (
          <TourPackageCard
            image={pkg.image}
            imageAlt={pkg.imageAlt}
            title={pkg.title}
            description={pkg.description}
            duration={pkg.duration}
            price={pkg.price}
            badge={pkg.badge}
          />
        ))}
      </div>
    </div>
    <div class="absolute bottom-0 left-0 w-full">
      <!-- ðŸŒŠ WAVE DIVIDER DENTRO DEL HERO -->
       <!-- <TornDivider /> -->
      <SectionDivide type="torn" color="#111827" />
    </div>
  </section>
</Layout>
